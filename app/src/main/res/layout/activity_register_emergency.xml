<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding15dp"
    tools:context=".activities.RegisterEmergencyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/width120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/tipo_emergencia"/>

            <Spinner
                android:id="@+id/cboTipoEmergencia_RegisterEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>
        </LinearLayout>


        <TextView
            android:layout_width="@dimen/width120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/marginTop15dp"
            android:text="@string/detalle"/>


        <EditText
            android:id="@+id/txtDetalle_RegisterEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="6"
            android:maxLength="150"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnRegistrarEmergencia_RegisterEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRAR EMERGENCIA"
            android:layout_marginTop="20dp"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>