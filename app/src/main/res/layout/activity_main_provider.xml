<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainProviderActivity"
    android:padding="@dimen/padding15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEmergenciasXCotizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7c53c"
                android:text="@string/emergencias_x_cotizar" />

            <Button
                android:id="@+id/btnEmergenciaAsignada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/emergencia_asignada" />

            <Button
                android:id="@+id/btnVerHistorialEmergencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ver_historial" />

        </LinearLayout>

        <Button
            android:id="@+id/btnEditarProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_proveedor" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>